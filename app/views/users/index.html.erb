<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Pass</th>
    <th>Salt</th>
    <th>Vorname</th>
    <th>Nachname</th>
    <th>Email</th>
    <th>Status</th>
    <th>Admin</th>
    <th>Bemerkung</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.pass %></td>
    <td><%= user.salt %></td>
    <td><%= user.vorname %></td>
    <td><%= user.nachname %></td>
    <td><%= user.email %></td>
    <td><%= user.status %></td>
    <td><%= user.admin %></td>
    <td><%= user.bemerkung %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

